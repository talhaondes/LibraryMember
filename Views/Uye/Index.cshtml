@model IEnumerable<Uye>

<h2>Üyeler</h2>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Üye Id</th>            
            <th>Üye Adı</th>
            <th>Üye Soyadı</th>
            <th>Üye E-posta</th>
            <th>Üye Telefon</th>
            <th>İşlemler</th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach(var member in Model)
            {
                <tr>
                    <td>@member.UyeID</td>
                    <td>@member.UyeAd</td>
                    <td>@member.UyeSoyad</td>
                    <td>@member.UyeEposta</td>                      
                    <td>@member.UyeTelefon</td>
                    <td>
                        <a asp-controller="Uye" asp-action="Edit" asp-route-id="@member.UyeID" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@member.UyeID" class="btn btn-sm btn-danger">Sil</a>

                    </td>


                </tr>
            }
        </tbody>


</table>