<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KutuphaneUye</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KutuphaneUye.styles.css" asp-append-version="true" />
    <style>
        .custom-bg-color {
            background-color: #007bff;  /* Kendi renginizi burada seçebilirsiniz */
            color: white;  /* Metin rengini beyaz yapıyoruz */
        }
    
        .navbar-light .navbar-nav .nav-link {
            color: white;  /* Navbar'daki linklerin rengini beyaz yapıyoruz */
        }
    
        .navbar-light .navbar-nav .nav-link:hover {
            background-color: #0056b3;  /* Hover sırasında mavi arka plan */
            color: white;  /* Hover sırasında metin rengini beyaz tutuyoruz */
        }
    </style>
</head>
<body>
    <header>
        <div class="jumbotron text-center bg-primary text-white">
            <h1 class="display-4">Kütüphane Üyelik Oluşturma</h1>
            <p class="lead">Üye kaydınızı yapın ve kitaplarınızı almaya başlayın!</p>
            <nav class="navbar navbar-expand-lg navbar-light custom-bg-color">
                <a class="navbar-brand" href="#">Kütüphane</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ">  <!-- Ortalamak için mx-auto ekledik -->
                        <!-- Üye Linki ve Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="uyeDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Üye İşlemleri
                            </a>
                            <div class="dropdown-menu" aria-labelledby="uyeDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Uye" asp-action="Create">Üye Ekle</a>
                                <a class="dropdown-item" asp-controller="Uye" asp-action="Index" asp-area="">Üyeler</a>
                            </div>
                        </li>
        
                        <!-- Kitap Linki ve Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="kitapDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kitap İşlemleri
                            </a>
                            <div class="dropdown-menu" aria-labelledby="kitapDropdown">
                                <a class="dropdown-item" asp-controller="Kitap" asp-action="Create" asp-area="">Kitap Ekle</a>
                                <a class="dropdown-item" asp-controller="Kitap" asp-action="Index" asp-area="">Kitaplar</a>
                            </div>
                        </li>
        
                        <!-- Kiralama Linki ve Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="kiralamaDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kitap Kiralama
                            </a>
                            <div class="dropdown-menu" aria-labelledby="kiralamaDropdown">
                                <a class="dropdown-item" asp-controller="Kiralama" asp-action="Create" asp-area="">Kitap Kirala</a>
                                <a class="dropdown-item" asp-controller="Kiralama" asp-action="Index" asp-area="">Kiralanmış Kitaplar</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KutuphaneUye - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Bootstrap Bundle (js & popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Your custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
